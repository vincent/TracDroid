<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">

	<ViewFlipper android:id="@+id/details"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">  
	
		<WebView  xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/webview_html"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" />
		    
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">

			<TextView android:id="@+id/webview_text"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent" android:editable="true" android:fadeScrollbars="true" android:focusable="true" android:focusableInTouchMode="true" android:longClickable="false" android:saveEnabled="true" android:scrollHorizontally="true"/>

		</ScrollView>
		    
	</ViewFlipper>


</LinearLayout>